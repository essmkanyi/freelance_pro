	<script>
		$(document).ready(function() {
			// Add Row
			$("#itemTable").on("click", ".addRow", function() {
				var newRow = '<tr>' +
					'<td></td>' +
					'<td><input class="form-control item-name" type="text" style="min-width:150px"></td>' +
					'<td><input class="form-control item-description" type="text" style="min-width:150px"></td>' +
					'<td><input class="form-control unit-cost" style="width:100px" type="text"></td>' +
					'<td><input class="form-control quantity" style="width:80px" type="text"></td>' +
					'<td><input class="form-control amount" readonly style="width:120px" type="text"></td>' +
					'<td><a href="#" class="text-danger font-18 deleteRow" title="Remove"><i class="fa fa-trash-o"></i></a></td>' +
					'</tr>';
				$("#itemTable tbody").append(newRow);
				updateRowNumbers();
			});
		
			// Delete Row
			$("#itemTable").on("click", ".deleteRow", function() {
				$(this).closest('tr').remove();
				updateRowNumbers();
				calculateGrandTotal(); // Update grand total after row deletion
			});
		
			// Update Row Numbers
			function updateRowNumbers() {
				$("#itemTable tbody tr").each(function(index) {
					$(this).find("td:first").text(index + 1);
				});
			}
		
			// Calculate Amount
			$("#itemTable").on("input", ".unit-cost, .quantity", function() {
				var row = $(this).closest("tr");
				var unitCost = parseFloat(row.find(".unit-cost").val()) || 0;
				var quantity = parseFloat(row.find(".quantity").val()) || 0;
				var amount = unitCost * quantity;
				row.find(".amount").val(amount.toFixed(2));
				calculateGrandTotal(); // Update grand total after amount change
			});
		
			// Calculate Grand Total
			function calculateGrandTotal() {
				var subTotal = 0;
				$(".amount").each(function() {
					subTotal += parseFloat($(this).val()) || 0;
				});
				var tax = subTotal * 0.16; // Assuming tax is 16%
		
		
				var discountPercentage = parseFloat($("#discountPercentage").val()) || 0; // Get discount percentage
				var discountAmount = subTotal * (discountPercentage / 100); // Calculate discount amount
				var grandTotal = subTotal + tax - discountAmount; // Calculate grand total including tax and discount
		
				// Update total tax
				$("#totalTax").text("Ksh. " + tax.toFixed(2));
		
				// Update total discount
				$("#totalDiscount").text("Ksh. " + discountAmount.toFixed(2));
		
				// Update grand total
				$("#grandTotal").text("Ksh. " + grandTotal.toFixed(2));
				$("#grandTotalInput").val(grandTotal.toFixed(2));

			}
		
			// Calculate Grand Total initially
			calculateGrandTotal();
		});
		</script>


    <script>
      document.getElementById("submit").addEventListener("click", (event) => {
        event.preventDefault(); // Prevent the default form submission behavior

        // Disable the button to prevent double-clicking
        event.target.disabled = true;

        const selectedOption = document.getElementById("client");
        const client = selectedOption.value; 
		const clientName =
		selectedOption.options[selectedOption.selectedIndex].text;         

		  const selectedOption2 = document.getElementById("project");
		  const project = selectedOption2.value;
        // const project =
		// selectedOption2.options[selectedOption2.selectedIndex].text;

		const selectedOption3 = document.getElementById("tax");
        const tax =
		selectedOption3.options[selectedOption3.selectedIndex].text;

        const email = document.getElementById("email").value;
        const client_address = document.getElementById("client_address").value;
        const billing_address = document.getElementById("billing_address").value;
        const invoice_date = document.getElementById("invoice_date").value;
        const due_date = document.getElementById("due_date").value;

		// Prepare item details to be sent to the server
        var itemDetails = [];
        $("#itemTable tbody tr").each(function() {
            var item = {
                description: $(this).find(".item-description").val(),
                unitCost: $(this).find(".unit-cost").val(),
                quantity: $(this).find(".quantity").val(),
                amount: $(this).find(".amount").val()
            };
            itemDetails.push(item);
        });
        
        if (!client || !project || !tax || !invoice_date || !due_date) {
          // Handle the case where not all fields are filled out
          swal("Error!", "Missing fields!", "error").then(() => {
            // Enable the button after showing the error message
            event.target.disabled = false;
          });
          return;
        }

        const data = {
			itemDetails: itemDetails,
            grandTotal: $("#grandTotalInput").val(),
			client: client,
			clientName: clientName,
			project: project,
			tax: tax,
			email: email,
			client_address: tax,
			billing_address: tax,
			invoice_date: invoice_date,
			due_date: due_date,

        };

        // Show loading animation
        swal({
          title: "Processing...",
          content: {
            element: "div",
            attributes: {
              id: "loading-animation",
            },
          },
          buttons: false,
          closeOnClickOutside: false,
          closeOnEsc: false,
        });

        // Use Axios to submit the form data to the /submit endpoint
        // ...
        axios
          .post("/create/invoice", data)
          .then(function (response) {
            // Hide loading animation
            swal.close();

            const successMessage =
              response.data.status ||
              "Your request has been submitted successfully.";
            swal({
              title: "Success!",
              text: successMessage,
              icon: "success",
              button: "Close",
            }).then(() => {
              // Clear input fields
            //   document.getElementById("topic").value = "";
            //   document.getElementById("message").value = "";

              // Enable the button after closing the success message
            //   event.target.disabled = false;

              // Refresh the page
            //   location.reload();

              // You can also close the modal if necessary
              // jQuery('#ticketModal').modal('hide');

			  // Construct the URL with parameters
			  const params = new URLSearchParams(data).toString();
                    const url = `/invoice-view?${params}`;

                    // Redirect to the invoice view page with all data in the URL
                    window.location.href = url;

            });
          })
          .catch(function (error) {
            console.error(error);
            // Hide loading animation
            swal.close();

            const errorMessage =
              error.response.data.message ||
              "An error occurred. Please try again later.";
            swal({
              title: "Error!",
              text: errorMessage,
              icon: "error",
              button: "Close",
            }).then(() => {
              // Enable the button after closing the error message
              event.target.disabled = false;
            });
