						</div>
					</div>
					<!-- /Page Header -->
					
					
					
					<div class="row">
						<div class="col-md-12">
							<div class="table-responsive">
								<table class="table table-striped custom-table mb-0">
									<thead>
										

										<tr>
											<th>Invoice Number</th>
											<th>Client</th>
											<th>Created Date</th>
											<th>Due Date</th>
											<th>Amount</th>
											<th>Status</th>
											<th class="text-right">Action</th>
										</tr>

									</thead>
									<tbody>
										<% if (invoice_list.length != 0) {
											var i = 1;
											invoice_list.forEach(function(data) {
											%>

										<tr>
											<td><a href="/invoice-view"><%= data.invoice_id %></a></td>
											<td><%= data.client_id %></td>
											<td><%= data.invoice_date %></td>
											<td><%= data.due_date %></td>
											<td>Ksh. <%= data.other_info ? data.other_info : '0' %></td>
											<td>
												<% if (data.payment_status === 'Pending') { %>
												  <span class="badge bg-inverse-warning"><%= data.payment_status %></span>
												<% } else if (data.payment_status === 'Paid') { %>
												  <span class="badge bg-inverse-success"><%= data.payment_status %></span>
												<% } else { %>
												  <!-- Default badge if neither "Pending" nor "Paid" -->
												  <span class="badge bg-primary"><%= data.payment_status %></span>
												<% } %>
											  </td>
																						  <td class="text-right">
												<div class="dropdown dropdown-action">
													<a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
													<div class="dropdown-menu dropdown-menu-right">
														<a class="dropdown-item" href="edit-invoice.html"><i class="fa fa-pencil m-r-5"></i> Edit</a>
