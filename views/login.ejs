		<script src="https://www.gstatic.com/firebasejs/10.8.1/firebase-app.js"></script>
		<script src="https://www.gstatic.com/firebasejs/10.8.1/firebase-analytics.js"></script>
		
        <title>Freelance Pro | Sign In</title>
		
		<!-- Favicon -->
        <link rel="shortcut icon" type="image/x-icon" href="assets\img\favicon.png">
		
		<!-- Bootstrap CSS -->
        <link rel="stylesheet" href="assets\css\bootstrap.min.css">
		
		<!-- Fontawesome CSS -->
        <link rel="stylesheet" href="assets\css\font-awesome.min.css">
		
		<!-- Main CSS -->
        <link rel="stylesheet" href="assets\css\style.css">
		
		<!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
		<!--[if lt IE 9]>
			<script src="assets/js/html5shiv.min.js"></script>
			<script src="assets/js/respond.min.js"></script>
		<![endif]-->
    </head>
    <body class="account-page">
	
		<!-- Main Wrapper -->
        <div class="main-wrapper">
			<div class="account-content">
				<!-- <a href="job-list.html" class="btn btn-primary apply-btn">Apply Job</a>
				<div class="container"> -->
				
					<!-- Account Logo -->
					<div class="account-logo">
						<a href="/"><img src="assets\img\logo.png" alt="Freelance Pro"></a>
					</div>
					<!-- /Account Logo -->
					
					<div class="account-box">
						<div class="account-wrapper">
							<h3 class="account-title">Welcome to <%= name%>! </h3>
							<p class="account-subtitle">Sign In</p>
							
							<!-- Account Form -->
							<form action="/index" method="post">
								<div class="form-group">
									<label>Username</label>
									<input class="form-control" type="text">
								</div>
								<div class="form-group">
									<label>Email Address</label>
									<input class="form-control" type="text">
								</div>
								<div class="form-group">
									<div class="row">
										<div class="col">
											<label>Password</label>
										</div>
										<div class="col-auto">
											<a class="text-muted" href="/forgot-password">
												Forgot password?
											</a>
										</div>
									</div>
									<input class="form-control" type="password">
								</div>
								<div class="form-group text-center">
									<a href="/index">
										<button class="btn btn-primary account-btn" type="submit">Sign In</button>
									</a>
								</div>
								<div class="account-footer">
									<p>Don't have an account yet? <a href="/register">Sign Up</a></p>
								</div>
							</form>
							<!-- /Account Form -->
							
						</div>
					</div>
				</div>
			</div>
        </div>
		<!-- /Main Wrapper -->
		
		<!-- jQuery -->
        <script src="assets\js\jquery-3.2.1.min.js"></script>
		
		<!-- Bootstrap Core JS -->
        <script src="assets\js\popper.min.js"></script>
        <script src="assets\js\bootstrap.min.js"></script>
		
		<!-- Custom JS -->
		<script src="assets\js\app.js"></script>
		  
    </body>
</html>